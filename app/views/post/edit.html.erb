<h1>Edit Post</h1>

<%= form_for :post, url: '/post/' + @post.id.to_s, method: :patch do |f| %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.submit %>
    </p>

    <p>
      <%= link_to 'Destroy',url_for(action: :delete,id: @post.id),method: :delete, data: {confirm: "Are you sure?"} %>
    </p>

<% end %>